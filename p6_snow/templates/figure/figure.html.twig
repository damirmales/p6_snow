{% extends 'base.html.twig' %}

{% block title %}Figure {{ fig.title }}{% endblock %}

{% block body %}

    <div class="container">

        <div class="row mt-4"
             style="background-image:url( {{ asset('/uploads/figures/') }}{{ fig.featureImage }});background-size: cover;">

            <h1 class="display-3 text-center"> {{ fig.title }}</h1>
            {% if app.user %}

                <div class="card-header">
                    <a href="{{ path('edit_figure', {'slug': fig.slug}) }}"><i class='fas fa-pen'></i></a>
                    <a href="{{ path('delete_figure', {'slug': fig.slug}) }}"> <i class='fas fa-trash-alt'></i></a>

                </div>
            {% endif %}
        </div>
        <!-- Portfolio Gallery pictures -->
        <div class="row mt-4">
            <div class="col">
                <h3> Images</h3>
            </div>
        </div>
        <div class="row">

            {% for media in medias %}
                {% if media.url %}
                    <div class="col">
                        <img src="{{ media.url }}" alt="image de présentation"
                             style="width:150px">
                        <div class="card-header">
                            <a href="#"><i class='fas fa-pen'></i></a>
                            <a href="#"> <i class='fas fa-trash-alt'></i></a>
                        </div>

                        <h5>Photo figure {{ media.title }}</h5>
                    </div><!-- col-->
                {% endif %}
            {% endfor %}
        </div>
        <div class="row mt-4">
            <div class="col-md-6">
                <!------------ pagination pictures of figure ---------------------->
                <div class="d-flex justify-content-center">
                    <nav aria-label="Comments navigation block">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" {% if numPictPage > 1 %}

                                   href="{{ path('page_figure',{'slug':fig.slug,'page':numPictPage-1}) }}"
                                   {% endif %}aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous </span>
                                </a>
                            </li>
                            {% if pagesOfPictures > 0 %}
                                {% for i in 1..pagesOfPictures %}
                                    <li class="page-item  {% if numPictPage == i %} active{% endif %} "><a
                                                class="page-link"
                                                href="{{ path('page_figure',{'slug':fig.slug,'page':i}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}
                            {% endif %}
                            <li class="page-item ">
                                <a class="page-link"{% if numPictPage < pagesOfPictures %} href="{{ path('page_figure',{'slug':fig.slug,'page':numPictPage+1}) }}"
                                        {% endif %} aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div> <!-- block pagination comments -->

        </div>
        <!-- Portfolio Gallery videos -->
        <div class="row mt-4">

            <div class="col">
                <h3> Vidéos </h3>
                <label for="Video">Video </label>
                <div class="embed-responsive embed-responsive-16by9 mb-4 mr-4 videoFigure">
                    <iframe class="embed-responsive-item"
                            src="https://www.youtube.com/embed/v64KOxKVLVg"></iframe>
                </div>
                <div class="card-header"><i class='fas fa-pen'></i>
                    <i class='fas fa-trash-alt'></i>

                </div>
            </div>


        </div>
        <!-- dates and group-->
        <div class="row mt-4">
            <div class="col">
                <h3> Informations </h3>
                <p>Groupe : {{ fig.figGroup }}, Date de création : {{ fig.createDate|date('d-m-Y') }}, date de mise à
                    jour: {{ fig.updateDate|date('d-m-Y') }}</p>

            </div>
        </div>
        <!-- description zone -->
        <div class="row mt-4">
            <div class="col">
                <h3> Description </h3>
                <div class="description">
                    <p>{{ fig.description }}</p>
                </div>
            </div>

        </div>
        <!--**** Comments zone *****-->
        <!-- Add a Comment -->


        <div class="row mt-4">
            <div class="col">

                <div class="">
                    {% if app.user %}
                        {{ form_start(form) }}

                        <h3>{{ form_row(form.content,{'label':'Votre commentaire'}) }}</h3>

                        <button type="submit" name="submit">Envoyer votre commentaire</button>
                        {{ form_end(form) }}
                    {% endif %}
                </div>
            </div>

        </div>

        <!-- Comment already available-->

        <div class="row mt-4">
            <div class="col">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Auteur</th>
                        <th>Avatar</th>
                        <th>Message</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if fig.comments|length > 0 %}
                        <h3>Les commentaires reçus</h3>
                        {% for comment in comments %}

                            <tr>
                                <td>{{ comment.author.username }}</td>
                                <td><img src="{{ asset('/uploads/avatars/') }}{{ comment.author.picture }}"
                                         alt="{{ comment.figure.title }}">
                                </td>
                                <td>{{ comment.content }}</td>
                                <td>{{ comment.createDate|date('d-m-Y H:i:s') }}</td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
                <div class="d-flex justify-content-center">
                    <nav aria-label="Comments navigation block">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" {% if numPage > 1 %}

                                   href="{{ path('page_figure',{'slug':fig.slug,'page':numPage-1}) }}"
                                   {% endif %}aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous </span>
                                </a>
                            </li>
                            {% if pagesOfComments > 0 %}
                                {% for i in 1..pagesOfComments %}
                                    <li class="page-item  {% if numPage == i %} active{% endif %} "><a
                                                class="page-link"
                                                href="{{ path('page_figure',{'slug':fig.slug,'page':i}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}
                            {% endif %}
                            <li class="page-item ">
                                <a class="page-link"{% if numPage < pagesOfComments %} href="{{ path('page_figure',{'slug':fig.slug,'page':numPage+1}) }}"
                                        {% endif %} aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div> <!-- block pagination comments -->
            </div>
        </div><!-- row -->
    </div>

{% endblock %}
