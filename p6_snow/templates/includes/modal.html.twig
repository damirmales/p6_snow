<!-- Modal -->
<div class="modal fade" id="deleteFigure{{ fig.getSlug }}" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Vous allez supprimer {{ fig.title }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form role="form" action="{{ path('delete_figure', {'slug': fig.slug}) }}"
                      id="newModalForm">
                    Êtes vous sûr de vouloir supprimer la figure ?

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Non je
                            renonce
                        </button>
                        <button type="submit" class="btn btn-primary"
                        >Oui j'assume
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>